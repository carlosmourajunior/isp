# ==================== DJANGO SETTINGS ====================
SECRET_KEY=change-this-secret-key-in-production-make-it-very-long-and-random
DEBUG=True
ALLOWED_HOSTS=*

# ==================== DATABASE SETTINGS ====================
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# ==================== REDIS SETTINGS ====================
REDIS_URL=redis://redis:6379/0

# ==================== EMAIL SETTINGS ====================
# Configurar para receber alertas por email
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True

# ==================== MONITORING SETTINGS ====================
# Configurações específicas de monitoramento
PROMETHEUS_METRICS_ENABLED=True
GRAFANA_ADMIN_PASSWORD=admin123
ALERT_EMAIL_RECIPIENTS=admin@empresa.com

# ==================== SECURITY SETTINGS ====================
# Para produção, configurar adequadamente
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# ==================== LOGGING SETTINGS ====================
LOG_LEVEL=INFO
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# ==================== OLT SETTINGS ====================
# Configurações específicas da OLT (ajustar conforme sua OLT)
OLT_HOST=192.168.1.1
OLT_USERNAME=admin
OLT_PASSWORD=admin
OLT_PORT=22

# ==================== API SETTINGS ====================
# JWT Token settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# API Rate limiting
API_RATE_LIMIT=1000/hour

# ==================== BACKUP SETTINGS ====================
# Configurações de backup automático
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30

# ==================== DEVELOPMENT SETTINGS ====================
# Configurações apenas para desenvolvimento
DJANGO_EXTENSIONS_ENABLED=True
DEBUG_TOOLBAR_ENABLED=False